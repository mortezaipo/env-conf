## ---------------------------------------------- general
alias grep="grep -n --color"
# source: https://github.com/beyondgrep/ack2/issues/28#issuecomment-276645667
alias gg="git ls-files -oc --exclude-standard | ack -x"
alias rm="rm -i"
alias rm="trash"
alias ls="lsd"

## ---------------------------------------------- utility
alias p="ping 8.8.8.8"
alias pdf="evince"
alias ascii="graph-easy --from=dot --as_ascii"
alias cat="bat"
# source: https://medium.com/@GroundControl/better-git-diffs-with-fzf-89083739a9cb
alias f="fzf --cycle -i --preview 'bat {-1} --color=always'"
alias rmc="rm -rf CMakeFiles/ Testing/ CMakeCache.txt *.cmake Makefile compile_commands.json *.cbp"
alias u="yay -Syu && vim -c PluginUpdate +quitall && vim -c :CocUpdateSync +quitall && vim -c :BlackUpgrade +quitall"
alias o="vv \`f\`"
alias diff="ydiff -s --wrap"
alias ms="minikube start --vm-driver kvm2"
alias cb="xclip -selection clipboard"
alias kp="ps aux | peco | awk '{print \$2}' | xargs kill -9"
alias tgz='rpyc && tar --exclude='.venv' --exclude='.git' --exclude='.gitignore' --exclude='.kube' -zcvf `basename $PWD`.tar.gz ./*'
## --------------------------------------------- server
alias s="ssh mort@159.65.192.108"
alias ap="ps aux | peco"
alias k="kubectl"
alias kx="kubectx"
## ---------------------------------------------- python
alias a="[ -d .venv ] || python -m venv .venv ; source ./.venv/bin/activate"
alias d="deactivate"
alias ipy="ipython --no-term-title --no-confirm-exit --no-banner --no-simple-prompt"
alias py="python -q"
alias rpyc="find . -iname __pycache__ -exec rm -rf \"{}\" \;"
## ---------------------------------------------- db
alias psql="pgcli"
## ---------------------------------------------- editor
alias vv="vim"
alias v="vv ."
#alias ee="emacsclient -c -nw"
#alias e="emacsclient -c -nw ."
alias ee="emacs"
alias e="ee ."
export EDITOR="emacs -q"

## ---------------------------------------------- tmux
alias t="pwd | rev | cut -f1 -d '/' | rev | xargs tmux new-session -d -s && tmux attach"
alias tl="tmux ls"
alias ta="tmux attach"
alias oss="tmuxp load oss"

## ---------------------------------------------- proxy
alias x='export http_proxy="http://127.0.0.1:8118"'
alias dx='export http_proxy=""'
alias whereiam='echo $(curl -s http://ip-api.com/json | jq -r ".country,.city")'

